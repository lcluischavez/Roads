@model Roads.Models.Part

@{
    ViewData["Title"] = "Delete";
}


<div id="deets">
    <image class="DeetTitle" src="@Html.DisplayFor(model => model.ImagePath)" alt="Product Image Unavailable" width="520" height="450" />
    <h3 class="DeetTitle">Are you sure you want to remove this listing?
        <br/>
        @Html.DisplayFor(model => model.Name) by @Html.DisplayFor(model => model.Brand)
