@model Roads.Models.Part

@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}

@{
    var currentUser = await UserManager.GetUserAsync(User);
}


<div>
    <dl id="deets" class="row">
        <div>
            <image src="@Html.DisplayFor(model => model.ImagePath)" alt="Product Image Unavailable" width="500" height="500" />
            <br/>
            <h3 class="DeetTitle">@Html.DisplayFor(model => model.Brand) - @Html.DisplayFor(model => model.Name)</h3>
            <div class="DeetTitle">
                @Html.DisplayFor(model => model.PartType.Name)
            </div>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationUser.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApplicationUser.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationUser.Email)
            </dd>
        </div>
    </dl>
</div>
<div>
    @if (Model.ApplicationUserId != currentUser.Id)
    {
    }
    else
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }
    <br />
    <a asp-action="Index">Back to List</a>
</div>
