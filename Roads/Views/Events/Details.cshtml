@model Roads.Models.Event

@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}

@{
    var currentUser = await UserManager.GetUserAsync(User);
}




<div>
    <dl id="deets" class="row">
        <div>
            <image src="@Html.DisplayFor(model => model.ImagePath)" alt="Product Image Unavailable" width="520" height="450" />
            <h3 class="DeetTitle">@Html.DisplayFor(model => model.Name)</h3>
            <div class="DeetTitle">
                @Html.DisplayFor(model => model.EventType.Name)
            </div>
            <div class="DeetTitle">
                @Html.DisplayFor(model => model.Address)
                <br />
                @Html.DisplayFor(model => model.City)
            </div>
            @if (Model.SecondaryAddress != null)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SecondaryAddress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SecondaryAddress)
                    <br />
                    @Html.DisplayFor(model => model.City)
                </dd>
            }
            else
            {
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationUser.FirstName)
            </dd>
        </div>
    </dl>
</div>
<div>
    @if (Model.ApplicationUserId != currentUser.Id)
    {
    }
    else
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }
    <br />
    <a asp-action="Index">Back to List</a>
</div>
